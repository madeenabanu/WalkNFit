<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saveprincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icpstep.android.stepcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step counter"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/imageHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stepcou" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#61d8de"
            android:text="Status"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"

            />



        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e839f5"
            android:text="0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total steps taken forward since the last reboot.\n1000 Steps = 1 ICSTEP ðŸ‘£"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold" />



        <EditText
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PlugWallet or StoicWallet Principal only"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/redeem"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbg"
            android:layout_marginTop="10dp"
            android:onClick="redeemMethod"
            android:text="Send ICPSTEP ðŸ‘£ " />

        <Button
            android:id="@+id/upload"
            android:layout_width="271dp"
            android:layout_marginTop="10dp"
            android:onClick="uploadMethod"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbg"
            android:text="UPLOAD ðŸ“· " />


            <EditText
                android:id="@+id/imageId"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageId"
                android:layout_marginLeft="0dp"
                android:ems="10"
                android:hint="IMAGE ID"
                android:inputType="textPersonName"
                android:text="1" />

            <Button
                android:id="@+id/getImage"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageId"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonbg"
                android:onClick="getImageMethod"
                android:text="VIEW ðŸ“· " />

    </LinearLayout>


</ScrollView>
